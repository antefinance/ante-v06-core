pragma solidity ^0.8.0;

import "../AnteTest.sol";

contract AnteConditionalTest is AnteTest("This test fails in a toggleable manner") {
    bool public willFail = false;

    function setWillFail(bool _willFail) external {
        willFail = _willFail;
    }

    function checkTestPasses() public view override returns (bool) {
        return !willFail;
    }
}
