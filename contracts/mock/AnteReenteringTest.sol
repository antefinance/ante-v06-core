pragma solidity ^0.8.0;

import "../AnteTest.sol";
import "./ReenteringContract.sol";
import "../interfaces/IAntePool.sol";

contract AnteReenteringTest is AnteTest("This test reenters its calling Ante Pool in a toggleable manner") {
    bool public willReenter = false;
    ReenteringContract public reenteringContract;

    constructor(ReenteringContract _reenteringContract) {
        reenteringContract = _reenteringContract;
    }

    function setWillReenter(bool _willReenter) external {
        willReenter = _willReenter;
    }

    function setAntePool(IAntePool _antePool) external {
        reenteringContract.setAntePool(_antePool);
    }

    function checkTestPasses() public override returns (bool) {
        if (willReenter) {
            // avoid infinite loop
            willReenter = false;
            return reenteringContract.checkTestReentrant();
        }

        return true;
    }
}
