pragma solidity ^0.8.0;

import "../interfaces/IAntePool.sol";

contract ReenteringContract {
    IAntePool antePool;
    bool public reentrancySuccess = false;

    constructor() {}

    function setAntePool(IAntePool _antePool) external {
        antePool = _antePool;
    }

    function registerChallenge(uint256 amount) external {
        antePool.token().approve(address(antePool), amount);
        antePool.registerChallenge(amount);
    }

    function checkTestReentrant() external returns (bool) {
        if (address(antePool) == address(0)) return true;

        antePool.checkTest();
        reentrancySuccess = true;
        return true;
    }
}
